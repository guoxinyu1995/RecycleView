<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">
    <ImageView
        android:id="@+id/image_return"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/return_img"
        />
    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="今日头条"
        app:layout_constraintLeft_toRightOf="@id/image_return"
       app:layout_constraintRight_toLeftOf="@id/image_xin"
        app:layout_constraintTop_toTopOf="@id/image_return"
        app:layout_constraintBottom_toBottomOf="@id/image_return"
        android:gravity="center"
        android:textSize="26sp"
        />
    <ImageView
        android:id="@+id/image_xin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/xin_w"
        />
    <TextView
        android:id="@+id/down"
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_return"
        android:background="#000"
        android:layout_marginTop="10dp"
        />
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/x_recycle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/down"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        />
</android.support.constraint.ConstraintLayout>